@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Roles";
}

<h1 class="text-center">Roles</h1>
<br />
<a class="btn btn-success" asp-action="Create">Create role</a>

@if(Model.Count() > 0){
    <div class="text-center mb-3">
        <form asp-action="Index" class="d-flex align-items-center justify-content-center">
            <input class="form-control w-75" type="text" name="search" as placeholder="Search" />
            <input type="submit" class="btn btn-primary ms-2"/>
        </form>
    </div>
<table class="table table-striped rounded-3 overflow-hidden">
    <thead class="bg-dark text-white">
        <tr>
            <th>@Html.DisplayNameFor(R => R.Id) </th>
            <th>@Html.DisplayNameFor(R => R.Name) </th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td><a class="btn btn-warning" asp-action="Edit" asp-route-id="@role.Id">Edit</a></td>
                <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@role.Id">Delete</a></td>
            </tr>
        }
    </tbody>

</table>
}else{
    <h2 class="text-center text-primary">there is no any roles exist!</h2>
}


